{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["@penpot/plugin-types"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["plugin.ts", "src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}


